<!--?xml version="1.0"?-->
<!--
    - Base      : kobuki
    - Stacks    : hexagons
    - 3d Sensor : astra
-->    
<robot name="turtlebot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find myprofile)/robots/turtlebot_common_library.urdf.xacro" />
  <xacro:include filename="$(find myprofile)/robots/kobuki.urdf.xacro" />
  <xacro:include filename="$(find myprofile)/robots/hexagons.urdf.xacro"/>
  <xacro:include filename="$(find myprofile)/robots/astra.urdf.xacro"/>
  
  <kobuki/>
  <stack_hexagons parent="base_link"/>
  <sensor_astra parent="base_link"/>
</robot>
